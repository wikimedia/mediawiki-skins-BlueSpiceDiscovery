{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"parserOptions": {
		"sourceType": "commonjs",
		"ecmaVersion": 2017
	},
	"globals": {
		"blueSpiceDiscovery": "writeable",
		"bs": "readonly",
		"BSPing": "readonly",
		"discovery_cookie": "writeable",
		"ext": "readonly",
		"jQuery": "readonly",
		"mediaWiki": "readonly",
		"OOJSPlus": "readonly"
	},
	"rules": {
		"camelcase": "off",
		"es-x/no-array-prototype-includes": "off",
		"es-x/no-async-functions": "off",
		"max-len": "off",
		"no-jquery/no-class-state": "off",
		"no-jquery/no-global-selector": "off",
		"no-jquery/variable-pattern": "off",
		"no-prototype-builtins": "off",
		"no-jquery/no-done-fail": "warn"
	}
}
